static_library("user_annotations") {
  sources = [
    "user_annotations_features.cc",
    "user_annotations_features.h",
    "user_annotations_service.cc",
    "user_annotations_service.h",
    "user_annotations_types.h",
  ]

  public_deps = [
    "//base",
